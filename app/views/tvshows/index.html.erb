<div class="whitespace">
	<a id="ongoing" href="#">[ - ] ONGOING TV SHOW</a>
	<%= render :partial => "show_tvshow", :locals => {:ul_id => "ongoing_tvshow", :tvshow => @ongoing} %>
</div>

<div class="whitespace">
	<a id="complete" href="#">[ + ] COMPLETED TV SHOW</a>
	<%= render :partial => "show_tvshow", :locals => {:ul_id => "completed_tvshow", :tvshow => @complete} %>
</div>

<div id="edit_modal" class="modal hide fade in">
	<div class="modal-header">
		<a class="close" data-dismiss="modal">Ã—</a>
		<h1></h1>
	</div>
	
	<div></div>
</div>

<script type="text/javascript" language="javascript">
	var toggle = "-";
	$(document).ready(function() {
		var ongoing_var = $.cookie("ongoing");
		var complete_var = $.cookie("complete");
		if (ongoing_var == "hide")
			$("#ongoing").click();
		if (complete_var == "show")
			$("#complete").click();
	});
	$("#ongoing").click(function() {
		if ($(this).html() == "[ - ] ONGOING TV SHOW") {
			$(this).html("[ + ] ONGOING TV SHOW");
			$("#ongoing_tvshow").hide();
			$.cookie("ongoing", "hide");
		} else {
			$(this).html("[ - ] ONGOING TV SHOW");
			$("#ongoing_tvshow").show();
			$.cookie("ongoing", "show");
		}
		return false;
	});
	$("#complete").click(function() {
		if ($(this).html() == "[ - ] COMPLETED TV SHOW") {
			$(this).html("[ + ] COMPLETED TV SHOW");
			$("#completed_tvshow").hide();
			$.cookie("complete", "hide");
		} else {
			$(this).html("[ - ] COMPLETED TV SHOW");
			$("#completed_tvshow").show();
			$.cookie("complete", "show");
		}
		return false;
	});
	
	$(document).ready(function(){
		$("#edit_modal").modal({show:false});
	});
	
	$(document).on("click", ".edit, .new", function(){
		$(".modal-header > h1").html($(this).attr("title"));
		if ( $(this).attr("class") == "edit" )
			$("#edit_modal > div:nth-child(2)").load("/tvshows/"+$(this).attr("value")+"/edit");
		else
			$("#edit_modal > div:nth-child(2)").load("/tvshows/new");
		$("#edit_modal").modal("show");
	});
	
</script>
