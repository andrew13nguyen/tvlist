<%= form_for @tvshow, :html => {:class => "form-inline"} do |f| %>
<%#= form_for(@tvshow) do |f| %>
<div class="menu_fields modal-body">
	<% if @tvshow.errors.any? %>
	    <div id="error_explanation">
			<h2><%= pluralize(@tvshow.errors.count, "error") %> prohibited this tvshow from being saved:</h2>

			<ul>
				<% @tvshow.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :episode %>
		<%= f.number_field :episode %>
	</div>
	<div class="field whitespace">
		<%= f.check_box :ongoing %>
		<%= f.label :ongoing %>
	</div>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :date, :value => Time.now %>
</div>
		
	<div class="modal-footer">
		<a class="btn btn-inverse" data-dismiss="modal">Close</a>
		<%= f.submit submit_label, :class => "btn btn-success" %>
	</div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		if ($("#edit_modal > .modal-header > h1").html() == "New TV Series")
			$("#tvshow_title").focus();
		else
			$("#tvshow_episode").select();
	});
</script>