%div{:style => "margin:40px auto;width:500px;"}
  %h1 You've reached this page in error.
  %p Redirecting you in 5 seconds.
#type.hidden
  - if user_signed_in?
    TRUE
  - else
    FALSE
:javascript
  var timer;
  function redirect() {
  	if ($("#type").text() == "TRUE")
  		window.location.href = "/";
  	else
  		window.location.href = "/tvshows"
  };
  $(document).ready(function() {
  	timer = setTimeout("redirect()", 5000);
  });
  