<div id="menu_fields">
	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)), :html => {:class => "form-inline"} do |f| %>
		<%= devise_error_messages! %>

		<div><%= f.label :email %>
		<%= f.email_field :email %></div>

		<div><%= f.label :password %>
		<%= f.password_field :password %></div>

		<div class="whitespace"><%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %></div>

		<div><%= f.submit "Sign up", :class => "btn-success" %></div>
	<% end %>

	<div class="float_right"><%= render :partial => "devise/shared/links" %></div>
</div>