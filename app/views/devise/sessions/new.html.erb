<div id="menu_fields">
	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div><%= f.label :email %>
		<%= f.email_field :email %></div>

		<div><%= f.label :password %>
		<%= f.password_field :password %></div>

		<% if devise_mapping.rememberable? -%>
		 <div class="whitespace"><%= f.label :remember_me %><%= f.check_box :remember_me %></div>
		<% end -%>

		<div><%= f.submit "Sign in", :class => "btn-success" %></div>
	<% end %>

	<div class="float_right"><%= render :partial => "devise/shared/links" %></div>
<div id="menu_fields">