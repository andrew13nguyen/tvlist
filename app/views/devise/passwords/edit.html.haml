.row
  .col-xs-3.col-sm-3.col-md-3.col-lg-3

  .col-xs-12.col-sm-6.col-md-6.col-lg-6
    %h2 Change your password

    = form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class: 'form-horizontal'}) do |f|
      = devise_error_messages!

      = f.hidden_field :reset_password_token

      .form-group
        = f.label :password, class: 'col-sm-3 col-md-2 control-label'
        .col-sm-9.col-md-10
          = f.password_field :password, class: 'form-control'

      .form-group
        = f.label :password_confirmation, class: 'col-sm-3 col-md-2 control-label'
        .col-sm-9.col-md-10
          = f.password_field :password_confirmation, class: 'form-control'

      .form-group
        .col-sm-offset-3.col-md-offset-2.col-sm-9.col-md-10
          = f.submit 'Change my password', class: 'btn btn-success'
          = render partial: 'devise/shared/links'

  .col-xs-12.col-sm-3.col-md-3.col-lg-3
